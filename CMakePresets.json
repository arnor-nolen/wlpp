{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": ["./ConanPresets.json"],
    "configurePresets": [
        {
            "name": "multi",
            "displayName": "multi",
            "description": "Multi config.",
            "inherits": "conan-default",
            "cacheVariables": {
            }
        },
        {
            "name": "debug",
            "displayName": "debug",
            "description": "Debug config.",
            "inherits": "conan-debug",
            "cacheVariables": {
            }
        },
        {
            "name": "release",
            "displayName": "release",
            "description": "Release config.",
            "inherits": "conan-release",
            "cacheVariables": {
            }
        }
    ],
    "buildPresets": [
        {
            "name": "multi-debug",
            "configuration": "Debug",
            "configurePreset": "multi"
        },
        {
            "name": "multi-release",
            "configuration": "Release",
            "configurePreset": "multi"
        },
        {
            "name": "debug",
            "configuration": "Debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configuration": "Release",
            "configurePreset": "release"
        }
    ],
    "workflowPresets": [
        {
            "name": "multi-debug",
            "steps": [
                {
                    "type": "configure",
                    "name": "multi"
                },
                {
                    "type": "build",
                    "name": "multi-debug"
                }
            ]
        },
        {
            "name": "multi-release",
            "steps": [
                {
                    "type": "configure",
                    "name": "multi"
                },
                {
                    "type": "build",
                    "name": "multi-release"
                }
            ]
        },
        {
            "name": "debug",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug"
                },
                {
                    "type": "build",
                    "name": "debug"
                }
            ]
        },
        {
            "name": "release",
            "steps": [
                {
                    "type": "configure",
                    "name": "release"
                },
                {
                    "type": "build",
                    "name": "release"
                }
            ]
        }
    ]
}
